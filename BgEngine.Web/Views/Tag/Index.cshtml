@model IEnumerable<BgEngine.Domain.EntityModel.Tag>

@using Combres.Mvc;

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewBag.Title = Resources.AppMessages.Tag + " - " + Resources.AppMessages.Index;
    
    WebGrid grid = new WebGrid(ajaxUpdateContainerId: "grid-container",rowsPerPage: Int32.Parse(ViewBag.RowsPerPage));
    grid.Bind(Model, autoSortAndPage: false, rowCount: ViewBag.TotalTags);

}

@Html.CombresLink("IndexViewsJs")

<script type="text/javascript">
    $(document).ready(function () {
        $.index_startup('<h1>@Resources.AppMessages.Wait_Loading</h1>');
    });
</script>

<p>
    @Html.RouteLink(Resources.AppMessages.Create, "Default", new { controller = "Tag", action = "Create" }, new { @class = "bg-button-new" })
    @if (Model.Any()) {
        <a href="#" id="options" class="bg-button-gear">Options</a>	   
    }    
</p>

@if (Model.Any())
{
    <div id="options-container" class="ui-helper-hidden">
        <div class="ui-helper-margin multiselect ui-helper-margin-top-bottom">
            <div class="multiselect-check">
                <input type="checkbox" id="checkbox-1" data-column="1" data-default="true" />
                <span>@Resources.AppMessages.Name</span>
            </div>            
            <div class="multiselect-check">
                <input type="checkbox" id="checkbox-2" data-column="2" data-default="true" />
                <span>@Resources.AppMessages.Description</span>
            </div>
            <div class="multiselect-check">
                <input type="checkbox" id="checkbox-3" data-column="3" data-default="true" />
                <span>Posts</span>
            </div>            
            <div class="multiselect-check">
                <input type="checkbox" id="checkbox-4" data-column="4" data-default="true" />
                <span>Videos</span>
            </div>                        
        </div>            
    </div>    
    
    <div id="grid-container" class="ui-helper-margin-top-bottom ui-helper-clear-both">
        @grid.GetHtml(htmlAttributes: new {@class="ui-helper-width-100pc"},columns: new[] {
            grid.Column("TagName",  header:Resources.AppMessages.Name,canSort:true),
            grid.Column("TagDescription",header:Resources.AppMessages.Description, canSort:true),
            grid.Column("Posts",header:"Posts", canSort:true,format: @<span><p class="ui-helper-medium-font-size ui-helper-text-center">@item.Posts.Count</p></span>),
            grid.Column("Videos",header:"Videos", canSort:false,format: @<span><p class="ui-helper-medium-font-size ui-helper-text-center">@item.Videos.Count</p></span>),
            grid.Column("", header:Resources.AppMessages.Actions, 
                            format: @<span class="options">
                                           @Html.ActionLink(Resources.AppMessages.Edit, "Edit", new { id = item.TagId }, new { @class = "bg-button-grid-edit tooltip" })
                                           @Html.ActionLink(Resources.AppMessages.View_Detail, "Details", new { id = item.TagId }, new { @class = "bg-button-grid-zoom tooltip" })
                                           @Html.ActionLink(Resources.AppMessages.Delete, "Delete", new { id = item.TagId }, new { @class = "bg-button-grid-delete tooltip" })
                                     </span>,
                            canSort:false,
                            style: "ui-helper-minwidth")
        }, mode: WebGridPagerModes.All)
    </div>
}
else
{
	<h2 class="ui-widget-content ui-state-highlight ui-corner-all ui-helper-padding">@Resources.AppMessages.Error_NoTagsFound</h2>
}    